<resources>
    <style name="LargeText.Primary" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MediumText.Primary" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.Primary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NanoText.Primary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LargeText.Secondary" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="MediumText.Secondary" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.Secondary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="NanoText.Secondary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeText.Accent" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="MediumText.Accent" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.Accent" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="NanoText.Accent" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeText.White" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MediumText.White" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.White" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NanoText.White" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PageTitleText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/MediumText.Primary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
